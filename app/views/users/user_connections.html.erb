<h1>Your Recommended connections</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%  @my_connectins.each do |my_connection| %>
      <tr>
        <td><%= my_connection.email %></td>
        <td><%= my_connection.try(:previous_company_detail) %></td>
        <td>
          <%= link_to 'Connect',send_connection_email_user_path(current_user,:connection_id=>my_connection), :class => 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



